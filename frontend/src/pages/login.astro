---
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <h1>Log In Here</h1>
  <form action="/login" id="login-form">
    <label>
      Username
      <input
        type="text"
        name="username"
        placeholder="Enter username"
        id="username-login"
      />
    </label>
    <label>
      Password
      <input
        type="password"
        name="password"
        placeholder="Enter password"
        id="password-login"
      />
    </label>
    <button type="submit">Log In</button>
  </form>
</Layout>
